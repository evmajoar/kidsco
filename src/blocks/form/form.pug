//- Все примеси в этом файле должны начинаться c имени блока ( form )

mixin form( mods )

  //- Принимает:
      mods {string} - список модификаторов

  //- Вызов:
      +form()
        +fieldset( "Название1" )
          +field-text({
            helpText: "Подсказка",
            attrs: {
              placeholder: "Пример"
            }
          })
          +field-text({
            helpText: "Подсказка",
            attrs: {
              placeholder: "Пример"
            }
          })

  -
    //- классы блока
    var className = 'form';

    // список модификаторов
    var allMods = '';
    if( typeof( mods ) !== 'undefined' && mods ) {
      var modsList = mods.split( ',' );
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' ' + className + '--' + modsList[i].trim();
      }
    }

  form( class=className + allMods )&attributes( attributes )
    block

mixin fieldset( legend, mods )

  //- Принимает:
      legend {string} - название группы полей
      mods {string} - список модификаторов

  //- Вызов:
      +fieldset( "Название1" )
        +field-text({
          helpText: "Подсказка",
          attrs: {
            placeholder: "Пример"
          }
        })

  -
    //- класс контсруктора
    var className = 'form__fieldset';
    var classNameLegend = 'form__legend';

    // список модификаторов
    var allMods = '';
    if( typeof( mods ) !== 'undefined' && mods ) {
      var modsList = mods.split( ',' );
      for ( var i = 0; i < modsList.length; i++ ) {
        allMods = allMods + ' ' + className + '--' + modsList[i].trim();
      }
    }

  fieldset( class=className + allMods )&attributes( attributes )
    legend( class=classNameLegend )= legend
    block