//- Все примеси в этом файле должны начинаться c имени блока ( logo )

mixin logo( mods )

  //- Принимает:
      mods {string} - модификаторы

  //- Вызов:
      +logo( mods )

  -
    //- класс блока
    const className = 'logo';

    //- список модификаторов
    const allMods = '';
      if ( typeof mods !== 'undefined' && mods ) {
      let modsList = mods.split( ',' );
      for ( let i = 0; i < modsList.length; i++ ) {
        allMods += ' ' + className + '--' + modsList[i].trim();
      }
    }

  //- Логотип-ссылка
  if ( attributes.href )
    a( class=className + allMods )&attributes( attributes )
      block

  //- Логотип-объект
  else
    p( class=className + allMods )&attributes( attributes )
      block
